<p id="notice"><%= notice %></p>

<%= link_to '> Back', episodes_path %>

<h1>Episode:  <%= @episode.name %></h1>

<div class="action-row">
  <%= link_to 'Edit', edit_episode_path(@episode), class: 'button' %>
  <%= link_to 'Destroy', @episode, class: 'button button--delete', method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

<h2>Statements</h2>

<table>
  <thead>
    <tr>
      <th>Statement</th>
      <th>Correct?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episode.episode_statements.alphabetical.each do |episode_statement| %>
      <tr>
        <td><%= episode_statement.statement %></td>
        <td><%= episode_statement.correct %></td>
        <td><%= link_to 'Edit', edit_episode_episode_statement_path(@episode, episode_statement) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Statement', new_episode_episode_statement_path(@episode), class: 'button' %>
